<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:id="@+id/rl_root">
    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/card_login"
        android:elevation="4dp"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_head"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="@string/user_name"
                android:textColorHint="@color/colorAccent"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_user_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/til_user_name"
            android:layout_marginTop="16dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="@string/password"
                android:textColorHint="@color/colorAccent"
                android:inputType="textPassword"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_login"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:backgroundTint="@color/colorAccent"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:layout_marginTop="384dp"
        android:layout_centerHorizontal="true"/>
    <android.support.design.widget.FloatingActionButton
        android:layout_below="@id/fab_login"
        android:layout_marginTop="16dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:backgroundTint="@color/colorAccent"
        android:layout_marginLeft="96dp"
        android:src="@drawable/umeng_socialize_wechat"/>
    <android.support.design.widget.FloatingActionButton
        android:layout_below="@id/fab_login"
        android:layout_marginTop="16dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:backgroundTint="@color/colorAccent"
        android:src="@drawable/umeng_socialize_sina_on"
        android:layout_centerHorizontal="true"/>
    <android.support.design.widget.FloatingActionButton
        android:layout_below="@id/fab_login"
        android:layout_marginTop="16dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="96dp"
        android:layout_alignParentRight="true"
        app:backgroundTint="@color/colorAccent"
        android:src="@drawable/umeng_socialize_qq_on"/>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/sign_up"
        android:elevation="6dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/subhead_text_size"
        android:text="注册用户"/>
</RelativeLayout>