<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_height="292dp"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_head"/>
            <TextView
                android:id="@+id/item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/civ_head"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Jeongho"/>
            <ImageView
                android:id="@+id/iv_category"
                android:layout_below="@id/item_tv"
                android:layout_alignLeft="@id/item_tv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_arrow_back_black_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_toRightOf="@id/iv_category"
                android:layout_alignTop="@id/iv_category"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"
                android:text="新闻"/>
            <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/civ_head"
                android:layout_marginTop="16dp"
                android:src="@drawable/card_bg"
                android:scaleType="centerCrop"
                android:transitionName="aaa"/>
            <TextView
                android:id="@+id/tv_news_title"
                android:layout_below="@id/iv"
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_height="24dp"
                android:maxLines="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="跟哥一起骑川藏！！！"/>
            <TextView
                android:id="@+id/tv_news_content"
                android:layout_below="@id/tv_news_title"
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_height="36dp"
                android:maxLines="2"
                android:textSize="12sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="2dp"
                android:text="picasso 内部默认实现了内存缓存，其大小为内存的1/7，如果想修改这个数据或者想自己调整缓存算法，可以实现picasso的cache接口"/>
            <TextView
                android:id="@+id/tv_fav"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="16"/>
            <ImageView
                android:id="@+id/iv_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite_black_18dp"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/tv_fav"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_comment"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/iv_fav"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="24"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comment_black_18dp"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/tv_comment"
                android:layout_marginBottom="8dp"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
